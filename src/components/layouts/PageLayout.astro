---
import ThemeToggle from "../ThemeToggle.astro";
---

<!-- Default Page Layout: Simple single column -->
<div class="min-h-screen p-4 sm:p-6 lg:p-8">
  <!-- Header with controls -->
  <header class="flex justify-between items-center mb-8 max-w-4xl mx-auto">
    <div class="flex items-center gap-4">
      <a
        href="/"
        class="text-2xl font-bold text-gray-800 dark:text-white hover:text-violet-600 dark:hover:text-violet-400 transition-colors"
      >
        Luke DeWitt
      </a>
    </div>
    
    <div class="flex gap-2">
      <slot name="controls" />
      <ThemeToggle />
    </div>
  </header>

  <!-- Main content -->
  <main class="max-w-4xl mx-auto">
    <slot />
  </main>
</div>